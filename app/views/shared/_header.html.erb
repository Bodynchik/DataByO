        <ul class="menu">
          <li class="menu__item"><a href="#"><%= t('.service') %></a></li>
          <li class="menu__item"><%= link_to t('.books'), books_path %></li>
          <li class="menu__item"><a href="#"><%= t('.contacts') %></a></li>
