<main class="content-container">
  <section class="section-container">
    <div class="section-container-header">
      <h1 class="container-title"><%= t('home.about_title') %></h1>
    </div>

    <div class="about-content-container">
      <p class="about-text">
        <%= t('home.about_text_1') %><br>
        <%= t('home.about_text_2') %>
      </p>

      <div class="options-container">
        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_1') %></h2>
          <p class="option-description"><%= t('home.option_text_1') %></p>
        </div>

        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_2') %></h2>
          <p class="option-description"><%= t('home.option_text_2') %></p>
        </div>

        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_3') %></h2>
          <p class="option-description"><%= t('home.option_text_3') %></p>
        </div>

        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_4') %></h2>
          <p class="option-description"><%= t('home.option_text_4') %></p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-container">
    <div class="section-container-header">
      <h1 class="container-title"><%= t('home.news_title') %></h1>
    </div>

    <div class="books-container">
      <% @latest_books.each do |book| %>
        <%= link_to book_path(book), class: 'books-list__link' do %>
          <div class="single-book">
            <div class="book-photo">
              <%= image_tag(book.book_image, class: 'image-grid') if book.book_image.attached? %>
            </div>
            <h2 class="book-title"><%= truncate(book.book_title, length: 25) %></h2>
            <div class="author-and-avail">
              <p class="book-author"><%= book.authors.map(&:full_name).join(', ') %></p>
              <p class="avail-amount"><%= t('home.available') %> <%= book.book_amount %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <section class="section-container">
    <div class="section-container-header">
      <h1 class="container-title"><%= t('home.best_title') %></h1>
    </div>

    <div class="books-container">
      <% if @top_books %>
        <% @top_books.each do |book| %>
          <%= link_to book_path(book), class: 'books-list__link' do %>
            <div class="single-book">
              <div class="book-photo">
                <%= image_tag(book.book_image, class: 'image-grid') if book.book_image.attached? %>
              </div>
              <h2 class="book-title"><%= book.book_title %></h2>
              <div class="author-and-avail">
                <p class="book-author"><%= book.authors.map(&:full_name).join(', ') %></p>
                <p class="avail-amount">В наявності <%= book.book_amount %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </section>


  <section class="section-container">
    <div class="section-container-header">
      <h1 class="container-title"><%= t('home.popular_title') %></h1>
    </div>

    <div class="books-container">
      <% @top_books_by_reviews.each do |book| %>
        <%= link_to book_path(book), class: 'books-list__link' do %>
          <div class="single-book">
            <div class="book-photo">
              <%= image_tag(book.book_image, class: 'image-grid') if book.book_image.attached? %>
            </div>
            <h2 class="book-title"><%= book.book_title %></h2>
            <div class="author-and-avail">
              <p class="book-author"><%= book.authors.map(&:full_name).join(', ') %></p>
              <p class="avail-amount">В наявності <%= book.book_amount %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</main>