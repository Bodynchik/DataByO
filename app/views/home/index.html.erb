<main class="content-container">
  <section class="section-container">
    <div class="section-container-header">
      <h1 class="container-title"><%= t('home.about_title') %></h1>
    </div>

    <div class="about-content-container">
      <p class="about-text">
        <%= t('home.about_text_1') %><br>
        <%= t('home.about_text_2') %>
      </p>

      <div class="options-container">
        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_1') %></h2>
          <p class="option-description"><%= t('home.option_text_1') %></p>
        </div>

        <div class="single-option">
          <h2 class="option-title"><%= t('home.option_title_2') %></h2>
